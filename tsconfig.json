{
	"compilerOptions": {
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"strict": true,
		"newLine": "lf",
		"baseUrl": ".",
		"paths": {
			"@public/*": ["src/Production/public/*"],
			"@components": ["src/Production/components"],
			"@constants": ["src/Production/Constants"],
			"@externalStores": ["src/Production/ExternalStores"],
			"@toolbarButtonsStateManager": [
				"src/Production/ToolbarButtonsStateManager"
			]
		},
		"esModuleInterop": true,
		"module": "ESNext",
		"noEmit": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"incremental": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"plugins": [{ "name": "next" }],
		"allowJs": true
	},
	"include": ["src/**/*", "declaration.d.ts", "index.ts"],
	"exclude": ["node_modules"]
}
