{
	"compilerOptions": {
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"strict": true,
		"newLine": "lf",
		"baseUrl": ".",
		"paths": {
			"@components": ["src/Product/components"],
			"@layouts": ["./src/layouts"]
		},
		"esModuleInterop": true,
		"module": "ESNext",
		"noEmit": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"incremental": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"plugins": [{ "name": "next" }],
		"allowJs": true
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules"]
}
